<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".InteractionActivity"
    android:orientation="horizontal"
    android:gravity="center">

    <!-- left layout-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewInteractionPatient"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/usuario_icon"/>

        <TextView
            android:id="@+id/textViewNAmePatient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Name 1 Name 2"
            android:typeface="sans"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textViewLastnamePatient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Lastname 1 Lastname 2"
            android:typeface="sans"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/textYearsPatient"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="edad"
            android:typeface="sans"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/imageInteractionEmotion"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ojo_icon"/>

        <ImageView
            android:id="@+id/imageLoadingBar"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/ojo_icon"/>

    </LinearLayout>

    <!-- rigth layout -->
    <LinearLayout
        android:layout_width="900dp"
        android:layout_height="match_parent"
        android:background="#ffc066"
        android:orientation="horizontal">

        <!--left layout -->
        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:background="#cd9c75"></LinearLayout>

        <!-- rigth layout-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#f23b1c"></LinearLayout>

    </LinearLayout>

</LinearLayout>
